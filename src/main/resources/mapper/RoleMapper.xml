<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shopeeerp.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.example.shopeeerp.pojo.Role">
        <id column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        role_id, role_name, description
    </sql>

    <insert id="insert" parameterType="com.example.shopeeerp.pojo.Role" useGeneratedKeys="true" keyProperty="roleId">
        INSERT INTO roles (role_name, description)
        VALUES (#{roleName}, #{description})
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM roles WHERE role_id = #{roleId}
    </delete>

    <update id="update" parameterType="com.example.shopeeerp.pojo.Role">
        UPDATE roles
        SET role_name = #{roleName},
            description = #{description}
        WHERE role_id = #{roleId}
    </update>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM roles
        WHERE role_id = #{roleId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM roles
    </select>

</mapper>
