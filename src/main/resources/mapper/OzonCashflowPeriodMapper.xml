<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.shopeeerp.mapper.OzonCashflowPeriodMapper">

    <resultMap id="BaseResultMap" type="com.example.shopeeerp.pojo.OzonCashflowPeriod">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="shop_id" property="shopId" jdbcType="BIGINT"/>
        <result column="begin_time" property="beginTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="page_count" property="pageCount" jdbcType="INTEGER"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, shop_id, begin_time, end_time, page_count, created_at, updated_at
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/> FROM ozon_cashflow_period ORDER BY begin_time DESC
    </select>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/> FROM ozon_cashflow_period WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.shopeeerp.pojo.OzonCashflowPeriod">
        INSERT INTO ozon_cashflow_period (
            id, shop_id, begin_time, end_time, page_count, created_at, updated_at
        ) VALUES (
            #{id}, #{shopId}, #{beginTime}, #{endTime}, #{pageCount}, #{createdAt}, #{updatedAt}
        )
    </insert>

    <update id="update" parameterType="com.example.shopeeerp.pojo.OzonCashflowPeriod">
        UPDATE ozon_cashflow_period SET
            shop_id = #{shopId},
            begin_time = #{beginTime},
            end_time = #{endTime},
            page_count = #{pageCount},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM ozon_cashflow_period WHERE id = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE FROM ozon_cashflow_period
    </delete>

</mapper>
